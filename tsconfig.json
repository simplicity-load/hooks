{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ES2021"],
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./*.tsx", "./*.ts"],
  "exclude": ["node_modules", "dist", "*.spec.ts"]
}

